{
    "name": "My Chrome extension",
    "description": "Simple template for Chrome/Edge extensions",
    "author": "Milan NICOLAS",
    "version": "1.0.0",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "activeTab"
    ],
    "action": {
        "default_popup": "default_popup.html"
    },
    "background": {
        "service_worker": "js/background.js"
    }
}